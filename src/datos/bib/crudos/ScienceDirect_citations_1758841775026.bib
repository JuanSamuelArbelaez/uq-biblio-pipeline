year = {2024},
issn = {2451-9588},
doi = {https://doi.org/10.1016/j.chbr.2024.100510},
url = {https://www.sciencedirect.com/science/article/pii/S245195882400143X},
author = {Afsheen Rezai and Ehsan Namaziandost and Gwo-Jen Hwang},
keywords = {ChatGPT, EFL university students, L2 proficiency, Phenomenological analysis},
abstract = {As technology becomes increasingly embedded in English as a foreign language (EFL) education, understanding the pedagogical potential of tools like ChatGPT is essential. This phenomenological study investigates how ChatGPT facilitates L2 development from the perspectives of senior EFL students. A purposive sample of 21 students (9 males, 12 females) engaged with ChatGPT over a 12-month period. Data were gathered through participant diaries and semi-structured interviews, analyzed via phenomenological methods to capture the essence of their experiences. The analysis uncovered four key categories: (e.g., expanded vocabulary, promoted grammar accuracy, and improved pronunciation), interactive language practice (e.g., real-time conversations and instant feedback), personalized learning experience (e.g., adaptive learning path, targeted skill improvement, and self-paced learning), and enriched learning environments (e.g., conversational AI companionship, gamification element, and continuous learning support). These findings evidence that ChatGPT can be considered as a valuable resource in EFL instruction because its personalized, interactive features can significantly support language acquisition and learner engagement.}
}
@article{YAN2025117950,
title = {Populating cellular metamaterials on the extrema of attainable elasticity through neuroevolution},
journal = {Computer Methods in Applied Mechanics and Engineering},
volume = {440},
pages = {117950},
year = {2025},
issn = {0045-7825},
doi = {https://doi.org/10.1016/j.cma.2025.117950},
url = {https://www.sciencedirect.com/science/article/pii/S0045782525002221},
author = {Maohua Yan and Ruicheng Wang and Ke Liu},
keywords = {Metamaterials, Neuroevolution, Multi-objective optimization, Mechanical oroperties, Compositional pattern-producing networks (CPPNs)},
abstract = {The trade-offs between different mechanical properties of materials pose fundamental challenges in engineering material design, such as balancing stiffness versus toughness, weight versus energy-absorbing capacity, and among the various elastic coefficients. Although gradient-based topology optimization approaches have been effective in finding specific designs and properties, they are not efficient tools for surveying the vast design space of metamaterials, and thus unable to reveal the attainable bound of interdependent material properties. Other common methods, such as parametric design or data-driven approaches, are limited by either the lack of diversity in geometry or the difficulty to extrapolate from known data, respectively. In this work, we formulate the simultaneous exploration of multiple competing material properties as a multi-objective optimization (MOO) problem and employ a neuroevolution algorithm to efficiently solve it. The Compositional Pattern-Producing Networks (CPPNs) is used as the generative model for unit cell designs, which provide very compact yet lossless encoding of geometry. A modified Neuroevolution of Augmenting Topologies (NEAT) algorithm is employed to evolve the CPPNs such that they create metamaterial designs on the Pareto front of the MOO problem, revealing empirical bounds of different combinations of elastic properties. Looking ahead, our method serves as a universal framework for the computational discovery of diverse metamaterials across a range of fields, including robotics, biomedicine, thermal engineering, and photonics.}
}
